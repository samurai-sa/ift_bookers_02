  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
         <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
        <tr>
          <td>
            <%= link_to book.title, book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td>
            <%= link_to "Edit", edit_book_path(book) %>
            <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>