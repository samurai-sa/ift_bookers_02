<div class="container">
  <h2>Editing Book</h2>

  <%= form_with model: @book, local:true do |f| %>
    <% if @book.errors.any?%>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" /></p>
  <% end %>
  <%= link_to "Show", book_path %> |
  <%= link_to "Back", books_path %>
</div>