<div class="container">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2 style="color:red"><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>

          <li style="color:red"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <div class="field form-item">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field form-item">
    <%= f.label :Image %><br />
    <%= f.attachment_field :profile_image,  autofocus: true, placeholder: "プロフィール画像" %>
  </div>
  <div class="field form-item">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, autofocus: true %>
  </div>
  <p><input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User" /></p>
<% end %>

</div>

