<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      <table class="table">
        <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
        <thead>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user) do %>
        <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
      <% end %>

      <div class="mt-3">
        <%= render 'books/form', book: @book %>
      </div>
    </div>

    <div class='col-xs-9 offset-md-1'>
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <a  href="/users/<%= @user.id %>">
                  <%= attachment_image_tag @user, :profile_image,  size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                </a>
               </td>
              <td><%= link_to book.title, book_path(book)  %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>