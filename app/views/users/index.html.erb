<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
        <thead>
          <tr>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>

      <div class="mt-3">
        <%= render 'books/form', books: @books %>
      </div>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= attachment_image_tag @user, :profile_image,  size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></th>
            <th><%= user.name %></th>
            <th><%= link_to "show", user_path(user) %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>